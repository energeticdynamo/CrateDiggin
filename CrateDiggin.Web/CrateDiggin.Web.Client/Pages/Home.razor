@page "/"
@using CrateDiggin.Web.Client.Component
@using CrateDiggin.Web.Client.Clients
@using CrateDiggin.Web.Client.Models
@inject DigginApiClient ApiClient

<div class="home-container">
    <header class="hero">
        <h1>🎵 Diggin in the Crates'</h1>
        <p class="tagline">Discover music by vibe, not just genre</p>
    </header>

    <div class="search-section">
        <div class="search-box">
            <input type="text" 
                   @bind="_query" 
                   @bind:event="oninput"
                   @onkeydown="HandleKeyDown"
                   placeholder="Describe your vibe... e.g., 'smooth jazz for a rainy evening'" 
                   disabled="@_isSearching" />
            <button @onclick="Search" disabled="@(_isSearching || string.IsNullOrWhiteSpace(_query))">
                @if (_isSearching)
                {
                    <span>Digging...</span>
                }
                else
                {
                    <span>🔍 Dig</span>
                }
            </button>
        </div>
    </div>

    @if (_isSearching || _isRevealing)
    {
        <CrateAnimation IsSearching="@_isSearching" IsRevealing="@_isRevealing" />
    }

    @if (!_isSearching && !_isRevealing && _albums.Any())
    {
        <div class="results-section">
            <h2>Found @_albums.Count gems 💎</h2>
            <div class="album-grid">
                @foreach (var album in _albums)
                {
                    <div class="album-card">
                        <div class="album-cover">
                            @if (!string.IsNullOrEmpty(album.CoverUrl))
                            {
                                <img src="@album.CoverUrl" alt="@album.Title" loading="lazy" />
                            }
                            else
                            {
                                <div class="placeholder-cover">🎵</div>
                            }
                        </div>
                        <div class="album-info">
                            <h3>@album.Title</h3>
                            <p>@album.Artist</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    @if (!_isSearching && !_albums.Any() && _hasSearched)
    {
        <div class="no-results">
            <p>No albums found for that vibe. Try a different search!</p>
        </div>
    }
</div>

@code {
    private string _query = "";
    private bool _isSearching = false;
    private bool _isRevealing = false;
    private bool _hasSearched = false;
    private List<Album> _albums = new();

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(_query))
        {
            await Search();
        }
    }

    private async Task Search()
    {
        if (string.IsNullOrWhiteSpace(_query) || _isSearching) return;

        _isSearching = true;
        _isRevealing = false;
        _albums.Clear();
        _hasSearched = true;
        StateHasChanged();

        try
        {
            // Let the animation play for at least 2 seconds
            var searchTask = ApiClient.SearchAsync(_query);
            var delayTask = Task.Delay(2000);

            await Task.WhenAll(searchTask, delayTask);
            _albums = await searchTask;

            // Show the "found" reveal animation
            _isSearching = false;
            _isRevealing = true;
            StateHasChanged();

            // After reveal animation, show results
            await Task.Delay(1500);
            _isRevealing = false;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Search error: {ex.Message}");
            _isSearching = false;
            _isRevealing = false;
        }

        StateHasChanged();
    }
}