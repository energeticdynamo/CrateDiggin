@implements IDisposable

<style>
    .crate-scene {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 3rem 1rem;
        min-height: 350px;
    }

        .crate-scene.active {
            opacity: 1;
        }

    .crate-container {
        position: relative;
        width: 320px;
        height: 200px;
        perspective: 1000px;
    }

    .crate {
        position: relative;
        width: 100%;
        height: 100%;
        transform: rotateX(10deg);
    }

    .crate-body {
        position: absolute;
        inset: 0;
        background: linear-gradient(180deg, #a0522d 0%, #8b4513 50%, #654321 100%);
        border-radius: 8px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5), inset 0 -10px 20px rgba(0,0,0,0.3);
    }

        .crate-body::before {
            content: '';
            position: absolute;
            top: 15px;
            left: 15px;
            right: 15px;
            height: 4px;
            background: #5a3010;
            border-radius: 2px;
            box-shadow: 0 20px 0 #5a3010, 0 40px 0 #5a3010;
        }

    .crate-inner {
        position: absolute;
        top: 15px;
        left: 20px;
        right: 20px;
        bottom: 15px;
        background: linear-gradient(180deg, #0d0d0d 0%, #1a1a1a 100%);
        border-radius: 6px;
        display: flex;
        align-items: flex-end;
        justify-content: center;
        padding: 15px 10px;
        gap: 4px;
        box-shadow: inset 0 5px 15px rgba(0,0,0,0.8);
    }

    .record {
        width: 18px;
        height: 120px;
        transform-origin: bottom center;
        transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
        cursor: pointer;
    }

    .record-sleeve {
        width: 100%;
        height: 100%;
        background: linear-gradient( 135deg, hsl(var(--hue), 50%, 25%) 0%, hsl(var(--hue), 60%, 35%) 50%, hsl(var(--hue), 50%, 20%) 100% );
        border-radius: 3px;
        box-shadow: 2px 0 6px rgba(0,0,0,0.4);
        position: relative;
    }

        .record-sleeve::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 12px;
            height: 12px;
            background: radial-gradient(circle, #222 40%, #111 100%);
            border-radius: 50%;
            transform: translate(-50%, -50%);
        }

    .record.active {
        transform: translateY(-30px) rotateY(-25deg) rotateZ(-2deg);
        z-index: 10;
    }

        .record.active .record-sleeve {
            box-shadow: 5px 10px 20px rgba(0,0,0,0.5);
        }

    .record.flipped {
        transform: rotateY(5deg);
    }

    /* Reveal animation */
    .found-record {
        position: absolute;
        top: -80px;
        left: 50%;
        transform: translateX(-50%);
        animation: pullUp 0.6s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
    }

    .found-sleeve {
        width: 120px;
        height: 120px;
        background: linear-gradient(135deg, #ffd700 0%, #ffaa00 50%, #ff8800 100%);
        border-radius: 8px;
        box-shadow: 0 15px 40px rgba(0,0,0,0.5), 0 0 20px rgba(255,215,0,0.3);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .found-vinyl {
        width: 80px;
        height: 80px;
        background: radial-gradient(circle at center, #ff4444 0%, #ff4444 20%, transparent 21%), repeating-radial-gradient(circle at center, #111 0px, #111 2px, #1a1a1a 3px, #1a1a1a 4px);
        border-radius: 50%;
        animation: spin 3s linear infinite;
    }

    @@keyframes pullUp {
        from {
            transform: translateX(-50%) translateY(50px) scale(0.5);
            opacity: 0;
        }

        to {
            transform: translateX(-50%) translateY(0) scale(1);
            opacity: 1;
        }
    }

    @@keyframes spin {
        from {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(360deg);
        }
    }

    .status-text {
        margin-top: 2rem;
        font-size: 1.2rem;
        color: #888;
        text-align: center;
    }

        .status-text.found {
            color: #ffd700;
        }

    .dots span {
        animation: pulse 1.4s ease-in-out infinite;
    }

        .dots span:nth-child(2) {
            animation-delay: 0.2s;
        }

        .dots span:nth-child(3) {
            animation-delay: 0.4s;
        }

    @@keyframes pulse {
        0%, 80%, 100% {
            opacity: 0.3;
        }

        40% {
            opacity: 1;
        }
    }
</style>

<div class="crate-scene @(IsSearching || IsRevealing ? "active" : "")">
    <div class="crate-container">
        <div class="crate">
            <div class="crate-body"></div>
            <div class="crate-inner">
                @for (int i = 0; i < 12; i++)
                {
                    var index = i;
                    <div class="record @GetRecordClass(index)" style="--hue: @(i * 30);">
                        <div class="record-sleeve"></div>
                    </div>
                }
            </div>
        </div>

        @if (IsRevealing)
        {
            <div class="found-record">
                <div class="found-sleeve">
                    <div class="found-vinyl"></div>
                </div>
            </div>
        }
    </div>

    @if (IsSearching && !IsRevealing)
    {
        <p class="status-text">
            Digging through the crates<span class="dots"><span>.</span><span>.</span><span>.</span></span>
        </p>
    }
    else if (IsRevealing)
    {
        <p class="status-text found">Found some gems! 💎</p>
    }
</div>

@code {
    [Parameter] public bool IsSearching { get; set; }
    [Parameter] public bool IsRevealing { get; set; }

    private int _activeRecord = 0;
    private int _direction = 1;
    private Timer? _timer;
    private HashSet<int> _flippedRecords = new();

    protected override void OnParametersSet()
    {
        if (IsSearching && _timer == null)
        {
            _flippedRecords.Clear();
            _activeRecord = 0;
            _direction = 1;

            _timer = new Timer(_ =>
            {
                _flippedRecords.Add(_activeRecord);
                _activeRecord += _direction;

                if (_activeRecord >= 11) _direction = -1;
                if (_activeRecord <= 0) _direction = 1;

                InvokeAsync(StateHasChanged);
            }, null, 0, 250);
        }
        else if (!IsSearching && _timer != null)
        {
            _timer.Dispose();
            _timer = null;
            _flippedRecords.Clear();
        }
    }

    private string GetRecordClass(int index)
    {
        if (index == _activeRecord) return "active";
        if (_flippedRecords.Contains(index)) return "flipped";
        return "";
    }

    public void Dispose()
    {
        _timer?.Dispose();
    }
}